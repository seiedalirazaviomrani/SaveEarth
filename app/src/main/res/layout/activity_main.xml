<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_eight"
        android:layout_marginTop="@dimen/dp_eight"
        android:layout_marginEnd="@dimen/dp_eight"
        android:layout_marginBottom="@dimen/dp_eight"
        android:contentDescription="@string/save_earth_content_description"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/save_earth" />

    <TextView
        android:id="@+id/save_the_earth"
        style="@style/style_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_twenty_four"
        android:layout_marginBottom="@dimen/dp_sixteen"
        android:text="@string/save_the_mother_earth"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="@string/save_the_mother_earth" />

    <TextView
        android:id="@+id/stop_destroyed"
        style="@style/style_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_sixteen"
        android:layout_marginEnd="@dimen/dp_twenty_four"
        android:text="@string/stop_destroying_forest"
        android:textColor="@color/colorAccent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        tools:text="@string/stop_destroying_forest" />

</android.support.constraint.ConstraintLayout>